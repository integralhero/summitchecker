<h1>Listing delegates</h1>

<table>
  <thead>
    <tr>
      <th>Status</th>
      <th>Full name</th>
      <th>Code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @delegates.each do |delegate| %>
      <tr>
        <td><%= delegate.status %></td>
        <td><%= delegate.full_name %></td>
        <td><%= delegate.code %></td>
        <td><%= link_to 'Show', delegate %></td>
        <td><%= link_to 'Edit', edit_delegate_path(delegate) %></td>
        <td><%= link_to 'Destroy', delegate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Delegate', new_delegate_path %>
